<h1>Login Account</h1>
<form action="/login" method="POST" >
    <div class="input-group mb-1">
        <span class="input-group-text col-sm-auto col-md-2" id="email-label">Email</span>
        <input name="email" type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-label">
    </div>

    <div class="input-group mb-1">
        <span class="input-group-text col-sm-auto col-md-2" id="password-label">Password</span>
        <input name="password" type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-label">
    </div>

    <input name="csrf" type="hidden" value={{csrf}}>

    <div class="row g-0 pt-2">
        <div class="col-2">
            <input type="submit" value="Login" style="width: 5em !important; height: 2.5em !important" class="btn btn-primary">
        </div>
        <div class="col-10">
            {{#if failed}}
                <p>Incorrect email or password!</p>
            {{/if}}
        </div>
    </div>
    <div class="row g-0">
        <a href="/register" style="text-decoration: none;">Don't have an account?</a>
    </div>

</form>