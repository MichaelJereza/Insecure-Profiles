<div class="row g-0 justify-content-start align-items-center">
    <div class="col-12">
        <a href="/" style="font-size: 2rem"><i class="bi bi-arrow-left-square-fill"></i></a>
    </div>
    <div class="col-12" align="center">
        <h2>Media Upload</h2>
    </div>
</div>

<form method="POST" action="/upload" enctype="multipart/form-data">
    <div class="row g-0">
        <div class="col">
            <input type="file" name="filecontent">
        </div>
        <div class="col-auto">
            <input type="submit" value="Upload">
        </div>
    </div>
</form>

{{#if uploadFail}}
    <div class="alert alert-danger m-0" role="alert">
        Upload failed!
    </div>
{{/if}}
{{#if uploadComplete}}
    <div class="alert alert-success m-0" role="alert">
        <form method="POST" action="/background" class="m-0">
            <div class="form-group row g-0 justify-content-between align-items-center">
                <div class="col-auto">
                    Uploaded <a href={{uploadLocation}}>{{uploadName}}</a>
                </div>
                <input name="backgroundUrl" type="hidden" placeholder="Background URL" class="form-control col" value="/{{uploadLocation}}">
                <input type="submit" value="Set Background?" class="btn btn-primary col-auto"> 
            </div>
        </form>
    </div>
{{/if}}